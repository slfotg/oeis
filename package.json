{
    "name": "oeis",
    "displayName": "oeis",
    "publisher": "slfotg",
    "description": "Search The On-Line Encyclopedia of Integer Sequences® (OEIS®) from your workspace",
    "version": "0.3.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/slfotg/oeis"
    },
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "Other",
        "Education"
    ],
    "keywords": [
        "OEIS",
        "sequences",
        "integer sequences",
        "Sloane",
        "search"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "properties": {
                "oeis.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable editor links for OEIS sequences"
                }
            }
        },
        "commands": [
            {
                "command": "oeis.search",
                "title": "OEIS: Search"
            },
            {
                "command": "oeis.searchSelectedText",
                "title": "OEIS: Search Selected Text"
            },
            {
                "command": "oeis.toggleCodeLens",
                "title": "OEIS: Toggle CodeLens"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "oeis.searchSelectedText",
                    "when": "editorHasSelection"
                }
            ],
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "oeis.searchSelectedText",
                    "group": "navigation"
                },
                {
                    "command": "oeis.toggleCodeLens",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.92.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "axios": "^1.7.5",
        "lit": "^3.2.0"
    }
}
