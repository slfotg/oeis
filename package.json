{
    "name": "oeis",
    "displayName": "oeis",
    "publisher": "slfotg",
    "description": "Search The On-Line Encyclopedia of Integer Sequences® (OEIS®) from your workspace",
    "version": "0.2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/slfotg/oeis"
    },
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "Education"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "explorer": [
                {
                    "id": "oeis.cacheView",
                    "name": "Cached Sequences",
                    "icon": "./resources/dark/number.svg"
                }
            ]
        },
        "commands": [
            {
                "command": "oeis.search",
                "title": "OEIS: Search"
            },
            {
                "command": "oeis.searchSelectedText",
                "title": "OEIS: Search Selected Text"
            },
            {
                "command": "oeis.toggleCodeLens",
                "title": "OEIS: Toggle CodeLens"
            },
            {
                "command": "oeis.deleteCachedItem",
                "title": "Delete",
                "group": "inline",
                "icon": "$(notebook-delete-cell)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "oeis.searchSelectedText",
                    "when": "editorHasSelection"
                }
            ],
            "editor/context": [
                {
                    "when": "editorHasSelection",
                    "command": "oeis.searchSelectedText",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "oeis.deleteCachedItem",
                    "when": "view == oeis.cacheView",
                    "group": "inline",
                    "icon": "${notebook-delete-cell}"
                }
            ]
        },
        "configuration": {
            "properties": {
                "oeis.enableCodeLens": {
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.92.0",
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.11.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "axios": "^1.7.5"
    }
}